(in-package :ray-tracer)

(defclass hue ()
  (red   :initarg :red
         :accessor red)
  (green :initarg :green
         :accessor green)
  (blue  :initarg :blue
         :accessor blue)
  (alpha :intiarg :alpha
         :accessor alpha))

